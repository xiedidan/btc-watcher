# 应用安全配置
SECRET_KEY=your_super_secret_jwt_key_here_should_be_very_long_and_random

# API配置
API_V1_STR=/api/v1
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Telegram通知配置
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
